{
    "name": "anirudha-kasralikar-globant/hello-php-unit",
    "type": "library",
    "description": "Hello to PHPunit",
    "keywords": ["php","phpunit","unit testing","tdd"],
    "homepage": "https://www.php.net",
    "license": "MIT",
    "authors": [
        {
            "name": "Rakesh Falke",
            "email": "rakeshfalke@gmail.com",
            "homepage": "https://github.com/rakeshf",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/anirudha-kasralikar-globant/hello-php-unit.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "HelloPHPUnit\\": "src/"
        }
    },
    "require-dev": {
      "phpunit/phpunit": "*",
      "mockery/mockery": "^0.9.4"
    },
    "autoload-dev": {
        "files": [
            "tests/lib/Invoker.php",
            "tests/Base.php"
        ]
    },
    "scripts": {
        "behat": ".\\vendor\\bin\\behat.bat",
        "unit": ".\\vendor\\bin\\phpunit.bat -c phpunit.xml --debug",
        "test": [
            "@unit",
            "@behat"
        ]
    },
    "require": {
        "behat/behat": "^3.5"
    }
}
